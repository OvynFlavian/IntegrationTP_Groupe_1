
<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent">



<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".MainActivity"
    android:background="#b3c7e1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amis"
        android:id="@+id/titreAmis"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btnajoutamis"
        android:id="@+id/btnAdd"
        android:layout_below="@id/titreAmis"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btnrequeteajout"
        android:id="@+id/btnRequete"
        android:layout_below="@id/titreAmis"
        android:layout_marginTop="10dp"/>

    <ListView
        android:id="@+id/amisList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#980b6392"
        android:layout_below="@id/btnAdd"
        android:layout_marginTop="10dp"/>

</RelativeLayout>

<ListView
    android:id="@+id/navlist"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_gravity="left|start"
    android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>


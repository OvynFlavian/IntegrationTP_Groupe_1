<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#b3c7e1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutPrincipalConnexion"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutConnexion"
                android:layout_centerHorizontal="true">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="Entrer votre Email"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">
                </EditText>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutConnexion"
                android:layout_marginTop="40dp"
                android:id="@+id/relativeLayout3">

            </RelativeLayout>

            <Button
                android:id="@+id/recupMdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/connexion"
                android:layout_alignTop="@+id/relativeLayout3"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>


    </RelativeLayout>

    <ListView
        android:id="@+id/amisList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>
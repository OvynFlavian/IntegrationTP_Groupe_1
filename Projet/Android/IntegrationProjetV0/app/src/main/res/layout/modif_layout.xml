<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#b3c7e1"
    android:padding="10dp"
    android:id="@+id/layoutModifProfil1"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/layoutModifProfil">

                <EditText
                    android:hint="Nom d'utilisateur"
                    android:gravity="center"
                    android:id="@+id/username"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <EditText
                    android:id="@+id/email"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_below="@id/username"
                    android:layout_centerHorizontal="true"
                    android:hint="Adresse mail"
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>

                <EditText
                    android:id="@+id/password"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_below="@id/email"
                    android:layout_centerHorizontal="true"
                    android:hint="Nouveau mot de passe"
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>

                <EditText
                    android:hint="Confirmation mot de passe"
                    android:layout_below="@id/password"
                    android:id="@+id/confPass"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>

                <EditText
                    android:hint="Numéro de téléphone"
                    android:layout_below="@id/confPass"
                    android:id="@+id/tel"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>

                <EditText
                    android:hint="Mot de passe actuel"
                    android:layout_below="@id/tel"
                    android:id="@+id/passActuel"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btnAppli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btnappliquer"
                android:layout_below="@id/layoutModifProfil"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>


    <ListView
        android:id="@+id/amisList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>
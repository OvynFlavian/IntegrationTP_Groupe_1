
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:padding="15dp"
        tools:context=".MainActivity"
        android:background="#b3c7e1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messages"
            android:id="@+id/titreAmis"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <ListView
            android:id="@+id/amisList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#980b6392"
            android:layout_above="@+id/message"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/titreAmis" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btnEnvoyer"
            android:hint="Entrez votre message"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="envoyer"
            android:id="@+id/btnEnvoyer"
            android:layout_alignBottom="@+id/message"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <ListView
        android:id="@+id/navlist"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>


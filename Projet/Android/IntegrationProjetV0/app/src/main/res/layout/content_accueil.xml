<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ampoule2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Bienvenue sur EveryDay Idea !"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Se connecter"
            android:id="@+id/connexion"
            android:layout_margin="10dp"
            android:onClick="connexion"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/connexion"
            android:text="s'inscrire"
            android:id="@+id/inscription"
            android:layout_margin="10dp"
            android:onClick="inscription"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trouverActivite"
            android:layout_below="@id/inscription"
            android:layout_centerHorizontal="true"
            android:text="trouver une activitÃ©"
            android:layout_margin="10dp"
            android:onClick="trouverActivite"/>

    </RelativeLayout>
</RelativeLayout>
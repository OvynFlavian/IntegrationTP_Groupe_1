<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#b3c7e1"
        android:layout_centerHorizontal="true"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titreProfil"
                android:text="Profil"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titreProfil"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pseudo : "
                    android:id="@+id/user"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_centerHorizontal="true"
                    android:text="Grade : "
                    android:id="@+id/grade"
                    android:textSize="20dp"
                    android:layout_below="@id/user"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_centerHorizontal="true"
                    android:text="Activité : "
                    android:id="@+id/activite"
                    android:textSize="20dp"
                    android:layout_below="@id/grade"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_centerHorizontal="true"
                    android:text="Email : "
                    android:id="@+id/mail"
                    android:textSize="20dp"
                    android:layout_below="@id/activite"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_centerHorizontal="true"
                    android:text="Téléphone : "
                    android:id="@+id/tel"
                    android:textSize="20dp"
                    android:layout_below="@id/mail"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_centerHorizontal="true"
                    android:text="Dernière connexion : "
                    android:id="@+id/lastConnect"
                    android:textSize="20dp"
                    android:layout_below="@id/tel"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_centerHorizontal="true"
                    android:text="Dernière activité proposée : "
                    android:id="@+id/lastIdea"
                    android:textSize="20dp"
                    android:layout_below="@id/lastConnect"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_centerHorizontal="true"
                    android:text="Date d'inscription : "
                    android:id="@+id/dateInscription"
                    android:textSize="20dp"
                    android:layout_below="@id/lastIdea"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnmodifier"
                    android:id="@+id/btnModif"
                    android:layout_below="@id/dateInscription"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <ListView
        android:id="@+id/amisList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>
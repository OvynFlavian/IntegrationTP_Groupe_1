<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#000000</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>

    <style name="AppTheme.Widget"/>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/mapolice.otf</item>
    </style>

    <!-- Police qui fonctionne sur textview mais pas le reste -->
    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <item name="fontPath">fonts/mapolice.otf</item>
    </style>

    <!-- Police qui fonctionne quand associé à un textview mais pas le reste -->
    <style name="police">
        <item name="fontPath">fonts/mapolice.otf</item>
    </style>

    <style name="whiteText">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="blackText">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:background">#303030</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="titre">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>